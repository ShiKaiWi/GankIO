<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:layout_margin="6dp">
        <TextView
            android:id="@+id/article_fragment_main_recycler_view_item_description"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:text="description"
            android:fontFamily="sans-serif"/>

        <TextView android:id="@+id/article_fragment_main_recycler_view_item_author"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:layout_alignParentLeft="true"
                  android:layout_below="@id/article_fragment_main_recycler_view_item_description"
                  android:textColor="@color/secondaryText"
                  android:text="author"
                  />

        <ImageView
            android:id="@+id/article_fragment_main_recycler_view_item_like"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/like"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/article_fragment_main_recycler_view_item_like"
            android:textSize="13sp"
            android:textColor="@color/secondaryText"
            android:id="@+id/article_fragment_main_recycler_view_item_date"
            android:text="date"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>
